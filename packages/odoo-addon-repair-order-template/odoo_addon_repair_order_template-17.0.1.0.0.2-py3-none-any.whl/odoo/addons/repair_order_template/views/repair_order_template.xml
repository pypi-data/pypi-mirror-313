<odoo>

    <record id="view_repair_order_template_search" model="ir.ui.view">
        <field name="model">repair.order.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=', False)]"
                />
                <group expand="1" string="Group By">
                    <filter
                        string="Company"
                        name="company_id"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="view_repair_order_template_form" model="ir.ui.view">
        <field name="model">repair.order.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="text-bg-danger"
                        invisible="active"
                    />
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" placeholder="e.g. General repair" />
                        </h1>
                    </div>
                    <group>
                        <group name="info">
                            <field name="product_id" />
                            <field name="under_warranty" />
                        </group>
                        <group name="other">
                            <field name="active" invisible="1" />
                            <field
                                name="company_id"
                                options="{'no_create': True}"
                                groups="base.group_multi_company"
                            />
                            <field
                                name="company_id"
                                invisible="1"
                                groups="!base.group_multi_company"
                            />
                            <field
                                name="tag_ids"
                                widget="many2many_tags"
                                options="{'color_field': 'color', 'no_create_edit': True}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="line_ids" string="Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="type" />
                                    <field name="product_id" />
                                    <field
                                        name="product_uom_category_id"
                                        column_invisible="1"
                                    />
                                    <field name="product_uom" groups="uom.group_uom" />
                                    <field name="product_uom_qty" />
                                    <field name="company_id" column_invisible="1" />
                                </tree>
                            </field>
                        </page>
                        <page name="internal_notes" string="Repair Notes">
                            <field
                                name="internal_notes"
                                placeholder="Add internal notes."
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_repair_order_template_tree" model="ir.ui.view">
        <field name="model">repair.order.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_id" optional="hide" />
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    optional="hide"
                />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="action_repair_order_template" model="ir.actions.act_window">
        <field name="name">Repair Order Templates</field>
        <field name="res_model">repair.order.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Repair Order template
            </p><p>
                Use templates to save time when creating repair orders.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_repair_order_template"
        name="Repair Orders Templates"
        parent="repair.repair_menu_config"
        action="action_repair_order_template"
    />

</odoo>
