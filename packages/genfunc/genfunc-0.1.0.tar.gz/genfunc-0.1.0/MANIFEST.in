include LICENSE
include README.md
include CHANGELOG.md
include requirements.txt
include pytest.ini
include .env.example

# Documentation
recursive-include docs *

# Include all Python source files
recursive-include func *.py
recursive-include tests *.py

# Include the helpers directory but exclude generated files
recursive-include func/helpers __init__.py
recursive-exclude func/helpers *.py
!func/helpers/__init__.py

# Configuration files
include pyproject.toml
include setup.py
include setup.cfg

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude __pycache__
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov