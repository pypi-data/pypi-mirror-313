{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator and scoop python",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            },
            "environment": {
                "Python_ROOT_DIR": "$env{USERPROFILE}/scoop/apps/python/current"
            }
        },
        {
            "inherits": "default",
            "name": "choco",
            "description": "Use Python3.12 installed with chocolatey under C:\\Python312",
            "environment": {
                "Python_ROOT_DIR": "C:/Python312"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                {
                    "type": "configure",
                    "name": "default"
                },
                {
                    "type": "build",
                    "name": "default"
                }
            ]
        }
    ]
}
