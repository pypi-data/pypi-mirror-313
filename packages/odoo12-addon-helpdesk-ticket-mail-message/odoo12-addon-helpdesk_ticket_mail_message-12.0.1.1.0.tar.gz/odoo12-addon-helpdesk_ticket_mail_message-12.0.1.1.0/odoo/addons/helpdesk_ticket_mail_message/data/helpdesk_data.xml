<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <!--Email template -->
    <record id="created_response_ticket_template" model="mail.template">
      <field name="name">Send mail (The opportunity ran from suport@)</field>
      <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket"/>
      <field name="email_to">${object.email_to|safe}</field>
      <field name="subject">The ticket ${object.number}</field>
      <field name="partner_to">${object.partner_id.id}</field>
      <field name="model_object_field" search="[('model', '=', 'helpdesk.ticket'), ('name', '=', 'description')]"/>
      <field name="copyvalue">${object.description}</field>
      <field name="email_cc">${object.email_cc}</field>
      <field name="auto_delete" eval="False"/>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html" type="html"><div>${object.description|safe}</div></field>
    </record>
  </data>
</odoo>
