{
    "python.testing.pytestArgs": ["tests", "-vv", "-s"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    "search.exclude": {
        "__pycache___": true,
        ".venv": true,
        "dist": true,
        "build": true
    },
        ".venv": true
    },
    "findUnusedExports.detectCircularImports": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never",
        "source.fixAll": "never",
        "source.unusedImports": "never"
    },
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.banditEnabled": false,
    "python.linting.flake8Args": ["--ignore=F401", "--enable-extensions=U100"],
    "restructuredtext.linter.doc8.extraArgs": [
        "--config",
        "${workspaceFolder}/.doc8",
        "--ignore",
        "D001"
    ],
    "restructuredtext.linter.run": "onSave"
}
