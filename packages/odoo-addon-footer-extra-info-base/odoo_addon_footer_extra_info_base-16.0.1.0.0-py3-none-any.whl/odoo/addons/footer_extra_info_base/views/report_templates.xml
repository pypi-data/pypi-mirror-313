<odoo>
    <template
        id="footer_extra_info_external_layout"
        inherit_id="web.external_layout"
        priority="99"
    >
        <xpath expr="//t[@t-if='not company']" position="after">
            <t t-if="o and 'footer_extra_info' in o">
                <t t-set="footer_extra_info" t-value="o.footer_extra_info" />
            </t>
        </xpath>
    </template>
    <template
        id="footer_extra_info_external_layout_striped"
        inherit_id="web.external_layout_striped"
        priority="99"
    >
        <xpath expr="//div[@t-field='company.report_footer']/.." position="after">
            <t t-if="footer_extra_info">
                <div t-esc="footer_extra_info" />
            </t>
        </xpath>
    </template>
    <template
        id="footer_extra_info_external_layout_boxed"
        inherit_id="web.external_layout_boxed"
        priority="99"
    >
        <xpath expr="//div[@t-field='company.report_footer']" position="after">
            <t t-if="footer_extra_info">
                <div t-esc="footer_extra_info" />
            </t>
        </xpath>
    </template>
    <template
        id="footer_extra_info_external_layout_bold"
        inherit_id="web.external_layout_bold"
        priority="99"
    >
        <xpath expr="//span[@t-field='company.report_footer']" position="after">
            <t t-if="footer_extra_info">
                <span t-esc="footer_extra_info" />
            </t>
        </xpath>
    </template>
    <template
        id="footer_extra_info_external_layout_standard"
        inherit_id="web.external_layout_standard"
        priority="99"
    >
        <xpath expr="//div[@t-field='company.report_footer']/.." position="after">
            <t t-if="footer_extra_info">
                <div t-esc="footer_extra_info" />
            </t>
        </xpath>
    </template>
</odoo>
